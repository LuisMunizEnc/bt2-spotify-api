{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "src/__tests__"]
}
